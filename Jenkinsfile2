pipeline {
    agent any

    environment {
        // Define the Docker image name and tag
        IMAGE_NAME = 'my-docker-image'
        IMAGE_TAG = 'latest'
        // Repository URL
        REPO_URL = 'https://github.com/resantinos/public.git'
    }

    stages {
        stage('Clone Repository') {
            steps {
                // Clone the public GitHub repository
                sh "mkdir ./gitara"
                sh "git clone ${REPO_URL} ./gitara"
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Ensure Docker is available
                    sh 'docker --version'
                    // Build the Docker image from the Dockerfile in the cloned repo
                    sh "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ."
                }
            }
        }
    }

    post {
        success {
            echo 'Build succeeded.'
            // Here you can add steps to push the image to a registry, for example
        }
        failure {
            echo 'Build failed.'
        }
    }
}
